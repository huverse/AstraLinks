# World Engine Environment Variables
# Copy to .env and configure

# Environment: development | internal | production
NODE_ENV=internal

# ============================================
# Security
# ============================================

# Internal Token for API access (required in internal/production)
WE_INTERNAL_TOKEN=your-secret-token-here

# Rate limiting
WE_RATE_LIMIT_PER_MINUTE=60
WE_RATE_LIMIT_WINDOW_MS=60000

# ============================================
# Society Rules
# ============================================

# Basic parameters
WE_INITIAL_RESOURCES=50
WE_INITIAL_MOOD=0.5
WE_ZERO_RESOURCE_EXIT_THRESHOLD=5
# WE_WORK_REWARD=[5,10,15]

# Mood/relationship effects
WE_CONSUME_MOOD_BOOST=0.1
WE_CONSUME_FAIL_MOOD_PENALTY=-0.2
WE_TALK_FRIENDLY_BOOST=0.1
WE_TALK_HOSTILE_PENALTY=-0.15
WE_HELP_BOOST=0.2
WE_CONFLICT_PENALTY=-0.3
# WE_CONFLICT_LOSS=[5,10,15]

# A-6 Pressure parameters
WE_WORK_DIMINISHING_START=30
WE_WORK_DIMINISHING_RATE=0.01
WE_WORK_MIN_EFFICIENCY=0.3
WE_CONSUME_INDULGENCE_THRESHOLD=0.7
WE_CONSUME_INDULGENCE_MULTIPLIER=1.5
WE_SHOCK_INTERVAL=15
WE_SHOCK_AGENT_COUNT=2
# WE_SHOCK_RESOURCE_LOSS=[5,15]
# WE_SHOCK_MOOD_LOSS=[0.1,0.3]
WE_CONFLICT_ESCALATION_THRESHOLD=-0.4
WE_CONFLICT_ESCALATION_PROB=0.3
WE_LOW_MOOD_THRESHOLD=-0.5
WE_LOW_MOOD_EXIT_THRESHOLD=8

# ============================================
# Session Management
# ============================================

WE_SESSION_TIMEOUT_MS=1800000
WE_MAX_SESSIONS_PER_USER=5
WE_EVENT_LOG_MAX_SIZE=1000
WE_CLEANUP_INTERVAL_MS=300000

# ============================================
# LLM
# ============================================

WE_LLM_ENABLED=false
# WE_LLM_PROVIDER=gemini
# WE_LLM_MODEL=gemini-2.0-flash

# ============================================
# Logging
# ============================================

WE_LOG_LEVEL=info
