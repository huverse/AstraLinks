# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=mydata

# JWT Secret (generate a random string)
JWT_SECRET=your_jwt_secret_here

# Server
PORT=3001
NODE_ENV=production

# Frontend URL (your domain)
FRONTEND_URL=https://astralinks.xyz

# QQ OAuth
QQ_APP_ID=your_qq_app_id
QQ_APP_KEY=your_qq_app_key
QQ_REDIRECT_URI=https://astralinks.xyz/api/auth/qq/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://astralinks.xyz/api/auth/google/callback

# Linux DO OAuth (connect.linux.do)
LINUX_DO_CLIENT_ID=your_linux_do_client_id
LINUX_DO_CLIENT_SECRET=your_linux_do_client_secret
LINUX_DO_REDIRECT_URI=https://astralinks.xyz/api/auth/linux-do/callback

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
SENDER_EMAIL=noreply@yourdomain.com

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Smithery MCP Marketplace
SMITHERY_API_KEY=your_smithery_api_key
# 可选：Smithery API 反向代理地址（中国大陆建议配置）
# SMITHERY_PROXY_URL=https://your-proxy.example.com/smithery

# Isolation Mode Encryption Key (must match frontend VITE_ISOLATION_ENCRYPTION_KEY)
ISOLATION_ENCRYPTION_KEY=astralinks-isolation-secure-key-2024-prod

